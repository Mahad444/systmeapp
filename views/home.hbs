{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
{{removedUser}}
<button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
 {{/if}}



<div class="row">
  <div class="col-6"><h1>Users</h1></div>
  <div class="col-6 justify-content-end d-flex">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">+Add User</a>
  </div>
</div>


<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th class="scope">#</th>
      <th class="scope">First Name</th>
      <th class="scope">Last Name</th>
      <th class="scope">Email</th>
      <th class="scope">PhoneNumber</th>
      <th class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    {{#each rows}}
      <th scope="row">{{this.id}}</th>
      <td>{{this.FirstName}}</td>
      <td>{{this.LastName}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td class="text-end">
        <a href="/viewuser/{{this.id}}" class="btn btn-light btn-small" type="button"><i class="bi bi-eye"></i> View</a>
        <a href="/edituser/{{this.id}}" class="btn btn-light btn-small" type="button"><i class="bi bi-pencil"></i> Edit</a>
        <a href="/{{this.id}}" class="btn btn-light btn-small" type="button"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>